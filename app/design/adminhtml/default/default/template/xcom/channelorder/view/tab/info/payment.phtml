<?php if ($payment = $this->helper('xcom_channelorder')->getChannelOrder()->getPayment()) :?>
<table cellspacing="0" class="form-list">
    <tr>
        <td class="label"><label><?php echo $this->__('Channel Payment Method');?></label></td>
        <td class="value"><strong><?php echo $payment->getMethod();?></strong></td>
    </tr>
    <tr>
        <td class="label"><label><?php echo $this->__('Order Currency');?></label></td>
        <td class="value"><strong><?php echo $payment->getCurrency();?></strong></td>
    </tr>
    <tr>
        <td class="label"><label><?php echo $this->__('Payment Date');?></label></td>
        <td class="value"><strong>
            <?php if ($payment->getDatePaid()) :?>
                <?php echo $this->formatDate($payment->getDatePaid(), 'medium', true);?>
            <?php endif ?>
        </strong></td>
    </tr>
    <tr>
        <td class="label"><label><?php echo $this->__('Fee');?></label></td>
        <td class="value"><strong><?php echo $this->getParentBlock()->getOrder()->formatPrice($payment->getFee());?></strong></td>
    </tr>
    <tr>
        <td class="label"><label><?php echo $this->__('Amount');?></label></td>
        <td class="value"><strong><?php echo $this->getParentBlock()->getOrder()->formatPrice($payment->getAmount());?></strong></td>
    </tr>
    <tr>
        <td class="label"><label><?php echo $this->__('External Transaction Id');?></label></td>
        <td class="value"><strong><?php echo $payment->getExternalTransactionId();?></strong></td>
    </tr>
</table>
<?php endif; ?>

