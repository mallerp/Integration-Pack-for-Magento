<?php $channelOrder = $this->helper('xcom_channelorder')->getChannelOrder(); ?>
<fieldset>
    <?php if ($this->getParentBlock()->getOrder()->getShippingDescription()): ?>
    <table cellspacing="0" class="form-list">
        <tr>
            <td class="label"><label><?php echo $this->__('Channel Shipping Service');?></label></td>
            <td class="value"><strong><?php echo $this->getParentBlock()->getOrder()->getShippingDescription();?></strong></td>
        </tr>
        <tr>
            <td class="label"><label><?php echo $this->__('Shipping Cost');?></label></td>
            <td class="value"><strong><?php echo $this->getParentBlock()->getOrder()->formatPrice($channelOrder->getShippingCost());?></strong></td>
        </tr>
    </table>
    <div class="tracking_block">
        <?php echo $this->getChildHtml('shipment_tracking') ?>
    </div>
    <?php else: ?>
        <?php echo $this->__('No shipping information available'); ?>
    <?php endif; ?>
</fieldset>
