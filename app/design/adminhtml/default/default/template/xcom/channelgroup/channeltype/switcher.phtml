<?php if ($channelTypes = $this->getChannelTypes()): ?>
<label for="channel_switcher"><?php echo $this->__('Choose Channel') ?>:</label>
<select name="channel_switcher" id="channel_switcher" onchange="return switchChannel(this);">
    <?php foreach ($channelTypes as $key => $channelType):  ?>
        <option
            value="<?php echo $channelType->getCode() ?>"
            <?php echo $this->isCurrentChannelType($channelType) ? 'selected="selected"' : ''; ?>>
            &nbsp;&nbsp;&nbsp;&nbsp;<?php echo $channelType->getTitle() ?>&nbsp;&nbsp;&nbsp;&nbsp;
        </option>
    <?php endforeach; ?>
</select>
<script type="text/javascript">
    function switchChannel(obj) {
        var storeParam = obj.value ? 'type/'+obj.value + '/' : '';
        setLocation('<?php echo $this->getSwitchUrl() ?>' + storeParam);
    }
</script>
<?php endif; ?>
